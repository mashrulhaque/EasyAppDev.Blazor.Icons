@page "/"
@using EasyAppDev.Blazor.Icons.Lucide
@rendermode InteractiveWebAssembly


<PageTitle>EasyAppDev.Blazor.Icons Demo</PageTitle>

<style>
    .icon-demo {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        margin: 2rem 0;
    }
    .icon-card {
        padding: 1.5rem;
        border: 1px solid #ddd;
        border-radius: 8px;
        text-align: center;
        min-width: 150px;
    }
    .icon-container {
        font-size: 48px;
        margin-bottom: 1rem;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80px;
    }
    .icon-container svg {
        width: 48px;
        height: 48px;
    }
    .red { color: #e74c3c; }
    .blue { color: #3498db; }
    .green { color: #2ecc71; }
    .orange { color: #e67e22; }
    .purple { color: #9b59b6; }
</style>

<h1>EasyAppDev.Blazor.Icons Demo</h1>

<p>A fully trimmable Blazor icon library with support for multiple icon sets.</p>

<hr style="margin: 3rem 0; border: none; border-top: 2px solid #eee;" />

<h2>Lucide Icons (Embedded - No HTTP Calls)</h2>
<div class="icon-demo">
    <div class="icon-card">
        <div class="icon-container red">
            <Activity />

        </div>
        <code>&lt;Activity /&gt;</code>
        <p>Activity Icon</p>
    </div>

    <div class="icon-card">
        <div class="icon-container blue">
            <Airplay />
        </div>
        <code>&lt;Airplay /&gt;</code>
        <p>Airplay Icon</p>
    </div>

    <div class="icon-card">
        <div class="icon-container green">
            <AlarmClock />
        </div>
        <code>&lt;AlarmClock /&gt;</code>
        <p>Alarm Clock Icon</p>
    </div>

    <div class="icon-card">
        <div class="icon-container purple">
            <Album />
        </div>
        <code>&lt;Album /&gt;</code>
        <p>Album Icon</p>
    </div>

    <div class="icon-card">
        <div class="icon-container orange">
            <AlignCenter />
