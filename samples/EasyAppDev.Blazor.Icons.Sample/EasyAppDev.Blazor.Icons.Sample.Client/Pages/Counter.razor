@page "/counter"
@rendermode InteractiveAuto
@using EasyAppDev.Blazor.Icons.Lucide

<title>Counter</title>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<div class="icons-demo" style="display:flex; gap:16px; align-items:center;">
    @* Source generator creates these icon components at compile-time *@
    <Activity style="width: 48px; height: 48px; color: red;" />
</div>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
